pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
    stage('ESLint tests') {
            steps {
                sh 'npx eslint ./cypress --ext .js'
            }
        }
    stage('Playright tests') {
            steps {
                sh 'npx playwright test tests/ui/e2e-tests/basic-tests.spec.ts'
            }
        }
    }
}
